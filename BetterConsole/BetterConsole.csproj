<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Company>MightyCorp</Company>
    <Authors>MightyTea</Authors>
    <Description>A C# Library that replace the System.Console and let you make beautiful Consoles with gradients and many different utilities.</Description>
    <PackageProjectUrl>https://github.com/MightyTea/BetterConsole</PackageProjectUrl>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/MightyTea/BetterConsole</RepositoryUrl>
    <PackageTags>Console; Color; Gradient; Colorfade; CLI</PackageTags>
    <Product>BetterConsoleSharp</Product>
    <PackageId>BetterConsoleSharp</PackageId>
    <Version>1.1.2</Version>
    <AssemblyVersion>1.1.2</AssemblyVersion>
    <FileVersion>1.1.2</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Update="logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
